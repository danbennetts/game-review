<div class="review">

<div class="review-rating" data-score="<%= review.rating %>"></div>
<p class="review-comment"><%= review.comment %></p>

<% if user_signed_in? %>
  <% if review.user_id == current_user.id %>

    <div class="links btn-group">
    <p>By <%= review.user.email %></p>
    <%= link_to "Edit", edit_game_review_path(review.game, review), class: "btn btn-custom"  %>
    <%= link_to "Delete", game_review_path(review.game, review), method: :delete, data: { confirm: "Are you sure you want to delete this review?"}, class: "btn btn-custom"  %>
    </div>
  <% end %>
<% end %>

</div>
