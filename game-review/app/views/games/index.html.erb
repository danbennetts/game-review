<h1 class="current-genre"><%= params[:genre] %></h1>

<% if @games.count == 0 %>
  <h1>There are no games currently in this genre</h1>
<% else %>

<div class="row">

  <% @games.each do |game| %>

    <div class="col-md-3">
    <a href="/games/<%= game.id %>">
      <%= image_tag game.game_img.url(:game_index), class: "game" %>
      </a>
    </div>
  <% end %>
  </div>
<% end %>
