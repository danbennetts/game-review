<%= simple_form_for @game do |f| %>
  <%= select_tag(:genre_id, options_for_select(@genres), :prompt => "Select a Genre") %>
  <%= f.file_field :game_img %>
  <%= f.input :title, label: "Game Title" %>
  <%= f.input :description %>
  <%= f.input :developer %>
  <%= f.input :publisher %>
  <%= f.input :rating %>
  <%= f.button :submit, :class => "btn-custom2"%>
<% end %>
