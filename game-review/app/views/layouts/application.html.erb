<!DOCTYPE html>
<html>
<head>
  <title>Game-Crunch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
          <%= link_to "Game-Crunch", root_path, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Register", new_user_registration_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Add Game", new_game_path %></li>
          <% else %>
            <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
            aria-expanded="false">Genres <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% Genre.all.each do |genre| %>
                <li class="<%= 'active' if params[:genre] == genre.name %>">
                  <%= link_to genre.name, games_path(genre: genre.name), class: "link" %>
                </li>
              <% end %>
            </ul>
        </li>




        <% if user_signed_in? %>
          <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
          <li><%= link_to "Log Out #{current_user.email}", destroy_user_session_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </nav>

<div class="container">
    <%= render 'layouts/messages' %>
    <%= yield %>
  </div>


</body>
</html>
